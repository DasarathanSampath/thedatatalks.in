.home .hero img
  max-width 450px!important

// User Stylus

.leftcolumn 
  float left
  width 60%
.rightcolumn 
  float left
  width 30%
.card 
  border none
  display flex
  padding 0.5em 0.8em 0 0  
@media screen and (max-width 640px) {
    .card{
      display block   
    }
  }
.card__first
  display block
  padding 0.5em 0.8em 0 0    
.card__right
  display block
  padding 0.5em 0.8em 0 0
  border-bottom 1px solid #ccc
.row:after
  content ""
  display table
  clear both
.card-img
  float left
  width 40%
  height 40%
  border-radius 2%
  border 1px solid #ccc
  @media screen and (max-width 640px) {
    .card-img {
      // float left      
      width 75%
    }
  }

.card-img__first
  // width 100%
  border-radius 2%
  border 1px solid #ccc
  max-height 25%
  max-width 25%
  width 75%
  

.card-txt
  font 0.5em
  padding-left 1em
  
.card-txt__dateTime
  color gray
  font-weight 300
  font 0.3em
.card-txt__title
  font-size 1.2em
  font-weight 400
  padding 0
  
.card-txt__desc
  font-weight 400
  line-height 1.2em
  text-align justify
.card-txt__imgDesc
  color gray
.card-txt__lnk
  font-size 1.4em
@media screen and (max-width 640px) {
  .leftcolumn, .rightcolumn {
    width 100%
    padding 0
  }
}

.form-group {
    width: 100%;
    display: inline-block;
    padding-left 2rem
}

.form-input {
    border: 1px solid #888888;
    border-radius: 5px;
    box-sizing: border-box;
    font: inherit;
    padding: 5px 10px;
    transition: all 0.3s ease;
    width: 50%;
    background-color: #F2F2F2;
    min-height: 43px;
}

@media screen and (max-width 640px) {
  .form-input, .form-group {
    padding 0 1% 0 1%
    width 98%
  }
}

.flex-grid {
    display flex
    max-width 1200px
    flex-grow 1
    flex-wrap wrap
}
@media (min-width 1360px) {
    .flex-grid {
        max-width 1300px
    }
}

.user-loggedin
  float left
  color #020245
  margin 1rem 1rem 0 1rem
  border-radius 0.5rem
  border-color gray  
  

.button-blue
    letter-spacing: .25px;
    background-color: #2c3e50;
    border-radius: 5px;
    border: 1px solid #888888;
    font-weight: 600;
    font-size: 0.875rem;
    text-align: center;
    height: 36px;
    min-width: 56px;
    overflow: hidden;
    text-transform: none;
    box-shadow 0 5px 5px 0 #888888
    padding 0 0.25rem 0.25rem 0.25rem
    color #fff

.profile-image
    border-radius: 50%; 
    width:50%; 
    display: block; 
    margin-left: auto; 
    margin-right: auto;
    max-width: 100px;

.form-error {
    background: #f4d3d9;
    color: #C82543;
    font-size: 0.8em;
    float: left;
    border-radius: 100px;
    padding: 6px 20px;
}


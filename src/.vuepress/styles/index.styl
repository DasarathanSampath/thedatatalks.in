.home .hero img
  max-width 450px!important

// User Stylus

.leftcolumn 
  float left
  width 60%
.rightcolumn 
  float left
  width 30%
.card 
  border none
  display flex
  padding 0.5em 0.8em 0 0  
.card__first
  display block
  padding 0.5em 0.8em 0 0    
.card__right
  display block
  padding 0.5em 0.8em 0 0
  border-bottom 1px solid #ccc
.row:after
  content ""
  display table
  clear both
.card-img
  float left
  width 40%
  height 40%
  border-radius 2%
  border 1px solid #ccc
.card-img__first
  width 100%
  border-radius 2%
  border 1px solid #ccc
.card-txt
  font 0.5em
  padding-left 1em
  
.card-txt__dateTime
  color gray
  font-weight 300
  font 0.3em
.card-txt__title
  font-size 1.2em
  font-weight 400
  padding 0
  
.card-txt__desc
  font-weight 400
  line-height 1.2em
  text-align justify
.card-txt__imgDesc
  color gray
.card-txt__lnk
  font-size 1.4em
@media screen and (max-width 640px) {
  .leftcolumn, .rightcolumn {
    width 100%
    padding 0
  }
}

.form-group {
    width: 100%;
    display: inline-block;
}

.form-input {
    border: 1px solid #ddd;
    border-radius: 5px;
    box-sizing: border-box;
    font: inherit;
    padding: 5px 10px;
    transition: all 0.3s ease;
    width: 100%;
    color: #505050;
    background-color: #fdfdfd;
    min-height: 43px;
}
